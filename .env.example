# ===========================================
# RPP Portal Environment Variables
# ===========================================

# ===========================================
# Frontend Configuration
# ===========================================
NEXT_PUBLIC_API_URL=http://localhost:3001
NEXT_PUBLIC_APP_NAME=RPP Portal
NEXT_PUBLIC_APP_VERSION=1.0.0

# ===========================================
# API Gateway Configuration
# ===========================================
API_GATEWAY_PORT=3001
API_GATEWAY_HOST=localhost
NODE_ENV=development

# Service URLs
AUTH_SERVICE_URL=http://localhost:3002
USER_SERVICE_URL=http://localhost:3003

# Redis Configuration
REDIS_URL=redis://localhost:6379
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_SKIP_SUCCESSFUL_REQUESTS=false

# Security
CORS_ORIGIN=http://localhost:3000
HELMET_ENABLED=true
COMPRESSION_ENABLED=true

# ===========================================
# Auth Service Configuration
# ===========================================
AUTH_SERVICE_PORT=3002
AUTH_SERVICE_HOST=localhost

# Database Configuration
DATABASE_URL=file:./data/dev.db
DATABASE_PATH=./data/dev.db

# JWT Configuration
JWT_SECRET=your-super-secret-jwt-key-change-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d
JWT_ISSUER=rpp-portal
JWT_AUDIENCE=rpp-portal-users

# LDAP Configuration
LDAP_URL=ldap://your-ldap-server:389
LDAP_BIND_DN=cn=admin,dc=example,dc=com
LDAP_BIND_PASSWORD=admin_password
LDAP_SEARCH_BASE=dc=example,dc=com
LDAP_SEARCH_FILTER=(uid={{username}})
LDAP_TIMEOUT=5000
LDAP_CONNECT_TIMEOUT=10000

# Session Configuration
SESSION_SECRET=your-super-secret-session-key-change-in-production
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTP_ONLY=true
SESSION_COOKIE_SAME_SITE=lax
SESSION_COOKIE_MAX_AGE=86400000

# ===========================================
# User Service Configuration
# ===========================================
USER_SERVICE_PORT=3003
USER_SERVICE_HOST=localhost



# ===========================================
# Logging Configuration
# ===========================================
LOG_LEVEL=info
LOG_FORMAT=json
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14d

# ===========================================
# Development Configuration
# ===========================================
# Set to true for development
DEVELOPMENT_MODE=true
DEBUG_MODE=true
ENABLE_SWAGGER=true
ENABLE_MONITORING=true

# ===========================================
# Production Configuration
# ===========================================
# Set to true for production
PRODUCTION_MODE=false
ENABLE_HTTPS=false
ENABLE_COMPRESSION=true
ENABLE_CACHING=true

# ===========================================
# Monitoring Configuration
# ===========================================
ENABLE_HEALTH_CHECKS=true
HEALTH_CHECK_INTERVAL=30000
ENABLE_METRICS=true
METRICS_PORT=9090

# ===========================================
# Security Configuration
# ===========================================
ENABLE_CSRF_PROTECTION=true
ENABLE_XSS_PROTECTION=true
ENABLE_CONTENT_SECURITY_POLICY=true
ENABLE_STRICT_TRANSPORT_SECURITY=false

# ===========================================
# Cache Configuration
# ===========================================
CACHE_TTL=3600
CACHE_MAX_SIZE=100
CACHE_ENABLED=true

# ===========================================
# Email Configuration (Future)
# ===========================================
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password

# ===========================================
# File Upload Configuration (Future)
# ===========================================
UPLOAD_MAX_SIZE=10485760
UPLOAD_ALLOWED_TYPES=image/jpeg,image/png,image/gif,application/pdf
UPLOAD_PATH=./uploads

# ===========================================
# Third Party Services (Future)
# ===========================================
# Google OAuth
GOOGLE_CLIENT_ID=your-google-client-id
GOOGLE_CLIENT_SECRET=your-google-client-secret

# Microsoft OAuth
MICROSOFT_CLIENT_ID=your-microsoft-client-id
MICROSOFT_CLIENT_SECRET=your-microsoft-client-secret

# ===========================================
# Custom Configuration
# ===========================================
# Add your custom environment variables here
CUSTOM_KEY=your-custom-value 