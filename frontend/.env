# Environment Variables
# ========================================

# API Gateway Configuration
NEXT_PUBLIC_API_GATEWAY_URL=http://localhost:3001

# NextAuth Configuration
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=your-super-secret-key-change-this-in-production

# LDAP Configuration
LDAP_URL="ldap://192.168.238.8:389"  # URL ของ Windows AD server
LDAP_BASE_DN="DC=rpphosp,DC=local"  # Base DN สำหรับค้นหาใน Windows AD
LDAP_BIND_DN="ldaprpp@rpphosp.local"  # UserPrincipalName สำหรับ bind เข้า Windows AD
LDAP_BIND_PASSWORD="rpp14641"  # รหัสผ่านสำหรับ bind DN
LDAP_SEARCH_FILTER="(|(sAMAccountName={{username}})(userPrincipalName={{username}}))"  # Filter สำหรับค้นหาผู้ใช้ใน Windows AD
LDAP_ATTRIBUTES="sAMAccountName,userPrincipalName,displayName,memberOf,cn,objectGUID,"  # Attributes ที่ต้องการดึงข้อมูลจาก Windows AD
LDAP_TIMEOUT=5000  # Timeout สำหรับ LDAP operations (milliseconds)
LDAP_CONNECT_TIMEOUT=10000  # Timeout สำหรับการเชื่อมต่อ LDAP (milliseconds)
LDAP_IDLE_TIMEOUT=30000  # Timeout สำหรับ idle connection (milliseconds)
LDAP_RECONNECT=true  # เปิดใช้งานการ reconnect อัตโนมัติ
