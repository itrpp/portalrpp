# Revenue Service Environment Variables
# ======================================

# Server Configuration
PORT=3003
NODE_ENV=development

# File Upload Configuration
MAX_FILE_SIZE=50mb
UPLOAD_PATH=./uploads
ALLOWED_FILE_TYPES=.dbf,.xls,.xlsx

# Database Configuration (ถ้ามี)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=revenue_db
DB_USER=revenue_user
DB_PASSWORD=revenue_password

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=20m
LOG_MAX_FILES=14

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100

# Security
CORS_ORIGIN=http://localhost:3000
TRUST_PROXY=false

# File Processing
TEMP_DIR=./temp
PROCESSED_DIR=./processed
BACKUP_DIR=./backup

# Notification (ถ้ามี)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your-email@gmail.com
SMTP_PASS=your-app-password 