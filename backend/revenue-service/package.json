{
  "name": "revenue-service",
  "version": "1.0.0",
  "description": "Revenue Service - จัดการข้อมูล DBF, REP, และ Statement สำหรับการเบิกจ่าย สปสช.",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx src/index.ts",
    "build": "tsc",
    "build:prod": "tsc -p tsconfig.prod.json",
    "start": "node dist/index.js",
    "start:dev": "tsx src/index.ts",
    "lint": "eslint src/**/*.ts",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "quality-check": "npm run lint && npm run type-check",
    "format": "prettier --write src/**/*.ts",
    "test": "jest",
    "test:watch": "jest --watch"
  },
  "keywords": [
    "revenue",
    "dbf",
    "rep",
    "statement",
    "spsch",
    "health",
    "api"
  ],
  "author": "RPP Portal Team",
  "license": "MIT",
  "dependencies": {
    "cors": "^2.8.5",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "multer": "^1.4.5-lts.1",
    "xlsx": "^0.18.5",
    "dbf": "^2.3.3",
    "iconv-lite": "^0.6.3",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1",
    "uuid": "^9.0.1",
    "path": "^0.12.7",
    "fs-extra": "^11.2.0"
  },
  "devDependencies": {
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/node": "^20.10.5",
    "@types/multer": "^1.4.11",
    "@types/uuid": "^9.0.7",
    "@types/fs-extra": "^11.0.4",
    "@types/jest": "^29.5.8",
    "tsx": "^4.6.0",
    "typescript": "^5.3.0",
    "eslint": "^8.56.0",
    "@typescript-eslint/eslint-plugin": "^6.15.0",
    "@typescript-eslint/parser": "^6.15.0",
    "prettier": "^3.1.1",
    "jest": "^29.7.0",
    "ts-jest": "^29.1.1"
  },
  "engines": {
    "node": ">=18.0.0"
  }
} 