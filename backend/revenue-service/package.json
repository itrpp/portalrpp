{
  "name": "revenue-service",
  "version": "1.0.0",
  "description": "Revenue Service - จัดการข้อมูล DBF, REP, และ Statement สำหรับการเบิกจ่าย สปสช.",
  "main": "dist/index.js",
  "scripts": {
    "dev": "tsx --max-old-space-size=4096 --expose-gc src/index.ts",
    "build": "tsc",
    "build:prod": "tsc -p tsconfig.prod.json",
    "start": "node --max-old-space-size=4096 --expose-gc dist/index.js",
    "start:dev": "tsx --max-old-space-size=4096 --expose-gc src/index.ts",
    "lint": "eslint src/**/*.ts --no-warn-ignored",
    "lint:fix": "eslint src/**/*.ts --fix",
    "type-check": "tsc --noEmit",
    "quality-check": "npm run lint && npm run type-check",
    "format": "prettier --write src/**/*.ts",
    "db:generate": "prisma generate",
    "db:push": "prisma db push",
    "db:migrate": "prisma migrate dev",
    "db:studio": "prisma studio",
    "db:reset": "prisma migrate reset",
    "db:seed": "tsx prisma/seed.ts"
  },
  "keywords": [
    "revenue",
    "dbf",
    "rep",
    "statement",
    "spsch",
    "health",
    "api"
  ],
  "author": "RPP Portal Team",
  "license": "MIT",
  "dependencies": {
    "@prisma/client": "6.13.0",
    "archiver": "^6.0.2",
    "axios": "1.11.0",
    "cors": "^2.8.5",
    "exceljs": "^4.4.0",
    "express": "^4.19.0",
    "express-rate-limit": "^7.1.5",
    "express-validator": "^7.0.1",
    "form-data": "^4.0.4",
    "fs-extra": "^11.2.0",
    "helmet": "^7.1.0",
    "iconv-lite": "^0.6.3",
    "luxon": "3.7.1",
    "multer": "^1.4.5-lts.1",
    "node-fetch": "^3.3.2",
    "path": "^0.12.7",
    "uuid": "^9.0.1",
    "winston": "^3.11.0",
    "winston-daily-rotate-file": "^4.7.1"
  },
  "devDependencies": {
    "@types/archiver": "^6.0.3",
    "@types/cors": "^2.8.17",
    "@types/express": "^4.17.21",
    "@types/fs-extra": "^11.0.4",
    "@types/luxon": "^3.7.1",
    "@types/multer": "^2.0.0",
    "@types/node": "^24.3.0",
    "@types/uuid": "^10.0.0",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "eslint": "^9.32.0",
    "prettier": "^3.6.2",
    "prisma": "6.13.0",
    "tsx": "^4.6.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=20.0.0 || >=23.0.0",
    "npm": ">=10.0.0"
  }
}
