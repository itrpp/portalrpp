# Database Configuration
DATABASE_URL="file:./dev.db"  # URL สำหรับเชื่อมต่อฐานข้อมูล (SQLite สำหรับ development)

# JWT Configuration
JWT_SECRET="your-super-secret-jwt-key-change-in-production"  # Secret key สำหรับการเข้ารหัส JWT tokens (ต้องเปลี่ยนใน production)

# Server Configuration
PORT=3002  # Port ที่ server จะรัน (default: 3002)
NODE_ENV="development"  # Environment ของระบบ (development, production, test)

# Security Configuration
CORS_ORIGIN="http://localhost:3000"  # Origin ที่อนุญาตให้เข้าถึง API (CORS)
RATE_LIMIT_WINDOW_MS=900000  # หน้าต่างเวลาในการจำกัด rate limit (milliseconds) - 15 นาที
RATE_LIMIT_MAX_REQUESTS=100  # จำนวน request สูงสุดที่อนุญาตในหน้าต่างเวลา - 100 requests ต่อ 15 นาที

# Session Configuration
SESSION_MAX_AGE=86400000  # อายุ session สูงสุด (milliseconds) - 24 ชั่วโมง
SESSION_UPDATE_AGE=3600000  # อายุการอัปเดต session (milliseconds) - 1 ชั่วโมง

# Password Configuration (ตาม Security Requirements)
PASSWORD_MIN_LENGTH=8  # ความยาวขั้นต่ำของรหัสผ่าน - 8 ตัวอักษร ตาม Security Requirements
PASSWORD_REQUIRE_UPPERCASE=true  # ต้องมีตัวพิมพ์ใหญ่ - เปิดใช้งาน ตาม Security Requirements
PASSWORD_REQUIRE_LOWERCASE=true  # ต้องมีตัวพิมพ์เล็ก - เปิดใช้งาน ตาม Security Requirements
PASSWORD_REQUIRE_NUMBERS=true  # ต้องมีตัวเลข - เปิดใช้งาน ตาม Security Requirements
PASSWORD_REQUIRE_SPECIAL_CHARS=true  # ต้องมีอักขระพิเศษ - เปิดใช้งาน ตาม Security Requirements

# Rate Limiting Configuration (ตาม Security Requirements)
LOGIN_MAX_ATTEMPTS=5  # จำนวนครั้งสูงสุดในการพยายามเข้าสู่ระบบ - 5 ครั้ง/15 นาที ตาม Security Requirements
LOGIN_WINDOW_MS=900000  # หน้าต่างเวลาสำหรับการจำกัดการเข้าสู่ระบบ (milliseconds) - 15 นาที ตาม Security Requirements
REGISTER_MAX_ATTEMPTS=3  # จำนวนครั้งสูงสุดในการพยายามสมัครสมาชิก - 3 ครั้ง/ชั่วโมง ตาม Security Requirements
REGISTER_WINDOW_MS=3600000  # หน้าต่างเวลาสำหรับการจำกัดการสมัครสมาชิก (milliseconds) - 1 ชั่วโมง ตาม Security Requirements
LDAP_MAX_ATTEMPTS=10  # จำนวนครั้งสูงสุดในการพยายามเข้าสู่ระบบ LDAP - 10 ครั้ง/นาที ตาม Security Requirements
LDAP_WINDOW_MS=60000  # หน้าต่างเวลาสำหรับการจำกัดการเข้าสู่ระบบ LDAP (milliseconds) - 1 นาที ตาม Security Requirements

# LDAP Configuration (Windows AD)
LDAP_URL="ldap://192.168.238.8:389"  # URL ของ Windows AD server
LDAP_BASE_DN="DC=rpphosp,DC=local"  # Base DN สำหรับค้นหาใน Windows AD
LDAP_BIND_DN="ldaptest@rpphosp.local"  # UserPrincipalName สำหรับ bind เข้า Windows AD
LDAP_BIND_PASSWORD="P@ssw0rd"  # รหัสผ่านสำหรับ bind DN
LDAP_SEARCH_FILTER="(|(sAMAccountName={{username}})(userPrincipalName={{username}}))"  # Filter สำหรับค้นหาผู้ใช้ใน Windows AD
LDAP_ATTRIBUTES="sAMAccountName,userPrincipalName,displayName,mail,memberOf,cn"  # Attributes ที่ต้องการดึงข้อมูลจาก Windows AD
LDAP_TIMEOUT=5000  # Timeout สำหรับ LDAP operations (milliseconds)
LDAP_CONNECT_TIMEOUT=10000  # Timeout สำหรับการเชื่อมต่อ LDAP (milliseconds)
LDAP_IDLE_TIMEOUT=30000  # Timeout สำหรับ idle connection (milliseconds)
LDAP_RECONNECT=true  # เปิดใช้งานการ reconnect อัตโนมัติ 